
<% content_for :head do %>
  圈子信息-微信通联
<% end %>
<h2 class="visible-phone" style="font-size:20px;line-height:20px;">
    我的圈子
</h2>
<h1 class="hidden-phone"><%= @sys_group.name %></h1>
<dl class="dl-horizontal dl-tlian">
  <% if @sys_group.create_user.present? %>
        <dt style="width: 70px;">创建人:</dt>
        <dd>
          <%= @sys_group.create_user.name.present?? @sys_group.create_user.name : @sys_group.create_user.email.split("@")[0]%>
        </dd>
  <% end %>
  <% if @sys_group.created_at.present?%>
        <dt style="width: 70px;">创建时间:</dt>
        <dd><%= shown_time(@sys_group.created_at) %></dd>
  <% end %>
  <% if @sys_group.contact_phone.present?%>
        <dt style="width: 70px;">联系方式:</dt>
        <dd><%= @sys_group.contact_phone %></dd>
  <% end %>
</dl>
<div class="hidden-phone">
  <%= link_to '编辑' , edit_sys_group_path(@sys_group) %> |
  <%= link_to '返回' , sys_groups_path %>
</div>
<div class="visible-phone">
  <%= link_to '编辑', edit_sys_group_path(@sys_group) %>
</div>
<hr/>
<h3 class="hidden-phone">圈子成员</h3>
<% if @sys_group.users.present? %>
    <table class="table table-borded table-hover">
      <tr>
        <th>邮箱</th>
        <th>姓名</th>
        <th>手机</th>
        <th>座机</th>
        <th>QQ</th>
        <th>操作</th>
      </tr>

      <% @sys_group.users.each do |sys_user| %>
          <tr>
            <td>
              <%= link_to sys_user.email, sys_user_path(sys_user) %>
            </td>
            <td><%= sys_user.name %></td>
            <td><%= sys_user.mobile %></td>
            <td><%= sys_user.phone %></td>
            <td><%= sys_user.qq %></td>
            <td>
              <% if sys_user.id != session[:id].to_i %>
                <%= link_to '从圈子中删除', destroy_user_group_sys_groups_path(:user_id => sys_user.id,:group_id => @sys_group.id), method: :delete , data: { confirm: '确定删除?' } %>
              <% end %>
            </td>
          </tr>
      <% end %>
    </table>
<% end %>



